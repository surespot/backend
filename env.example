# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/surespot
MONGODB_DB_NAME=surespot

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=30d

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_RESEND_SECONDS=30
OTP_MAX_ATTEMPTS=5

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=surespot_redis_password

# Expo Push Notifications (optional, for higher rate limits)
EXPO_ACCESS_TOKEN=

# Email Configuration (Gmail SMTP)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-specific-password
MAIL_FROM_NAME=SureSpot

# SMS Configuration
SMS_API_URL=https://www.bulksmsnigeria.com/api/v2/sms
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=SureSpot

# Payment Configuration (Paystack)
PAYSTACK_SECRET_KEY=your-paystack-secret-key